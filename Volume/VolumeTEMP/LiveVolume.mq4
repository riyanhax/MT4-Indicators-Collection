#property copyright "Copyright © 2012, zznbrm"
#property indicator_separate_window
#property indicator_buffers 1
#property indicator_color1 DodgerBlue
  
//+------------------------------------------------------------------+
//| User Inputs                                                      |
//+------------------------------------------------------------------+		

//+------------------------------------------------------------------+
//| Buffers                                                          |
//+------------------------------------------------------------------+
double gadblVolume[];

//+------------------------------------------------------------------+
//| Global Variables                                                 |
//+------------------------------------------------------------------+

//*********************************************************************************************
//* STANDARD FUNCTIONS BELOW                                                                  *
//*********************************************************************************************
//+------------------------------------------------------------------+
//| init()                                                           |
//+------------------------------------------------------------------+
int init()
{
   string strShortName = "LiveVolume";
   
   IndicatorShortName( strShortName );
   IndicatorDigits( 0 );
   
   SetIndexBuffer( 0, gadblVolume );
   SetIndexLabel( 0, "Live Volume" );
   SetIndexStyle( 0, DRAW_HISTOGRAM );
   SetIndexEmptyValue( 0, 0.0 );
                 
   return(0);
}

//+------------------------------------------------------------------+
//| deinit()                                                         |
//+------------------------------------------------------------------+
int deinit()
{
   return(0);
}

//+------------------------------------------------------------------+
//| start()                                                          |
//+------------------------------------------------------------------+
int start()
{  
   gadblVolume[0] += 1.0;   
   return(0);
}

